{
  "name": "Scrapezy",
  "author": "Scrapezy",
  "author_url": "https://github.com/Scrapezy",
  "category": "Browser Automation",
  "license": "MIT License",
  "package_url": "https://www.npmjs.com/package/@scrapezy/mcp",
  "source_url": "https://github.com/Scrapezy/mcp",
  "language": "JavaScript",
  "server_configuration": [
    {
      "name": "SCRAPEZY_API_KEY",
      "required": "Yes",
      "description": "Your Scrapezy API key",
      "default": ""
    }
  ],
  "tools": [
    {
      "name": "extract-structured-data",
      "description": "Extract structured data from websites using a specified URL and prompt. Integrate with Scrapezy to retrieve organized information for analysis or processing.",
      "instructions": "Extract structured data from a website.",
      "jsonSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "additionalProperties": false,
        "properties": {
          "prompt": {
            "description": "Prompt to extract data from the website",
            "type": "string"
          },
          "url": {
            "description": "URL of the website to extract data from",
            "format": "uri",
            "type": "string"
          }
        },
        "required": [
          "url",
          "prompt"
        ],
        "type": "object"
      }
    }
  ],
  "scrape_source": "https://glama.ai/mcp/servers/@Scrapezy/mcp",
  "version": "0.1.1",
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "scrapezy"
  ]
}